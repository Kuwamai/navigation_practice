<launch>
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <remap from="scan" to="mabot/laser/scan" />

    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="odom" />

    <param name="maxUrange" value="5.0" />
    <param name="maxRange" value="5.0" />

    <param name="xmin" value="-15" />
    <param name="ymin" value="-15" />
    <param name="xmax" value="15" />
    <param name="ymax" value="15" />

    <param name="srr" value="0.1" />
    <param name="srt" value="0.1" />
    <param name="str" value="0.1" />
    <param name="stt" value="0.1" />

    <param name="particles" value="30" />
  </node>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find mabot_slam)/launch/config/gmapping.rviz" /> 
</launch>
